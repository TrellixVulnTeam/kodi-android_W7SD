<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="audiodecoder.modplug"
  version="2.0.2"
  name="Modplug Audio Decoder"
  provider-name="spiff">
  <requires>
<import addon="kodi.binary.global.main" version="1.0.14"/>
<import addon="kodi.binary.global.filesystem" version="1.0.2"/>
<import addon="kodi.binary.instance.audiodecoder" version="2.0.0"/></requires>
  <extension
    point="kodi.audiodecoder"
    name="mod"
    extension=".669|.abc|.amf|.ams|.dbm|.dmf|.dsm|.far|.it|.j2b|.mdl|.med|.mod|.itgz|.mt2|.mtm|.okt|.pat|.psm|.ptm|.s3m|.stm|.ult|.umx|.xm|.mdgz|.s3gz|.xmgz"
    library_android="libaudiodecoder.modplug.so"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Modplug Audio Decoder</summary>
    <description lang="en">Plays MOD files and few other formats.

It is recommended to use "OpenMPT Audio Decoder" addon instead of this one.</description>
    <platform>android-armv7</platform>
  </extension>
</addon>
