<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="audioencoder.wav"
  version="2.0.2"
  name="Wav Audio Encoder"
  provider-name="jmarshall">
  <requires>
<import addon="kodi.binary.global.main" version="1.0.14"/>
<import addon="kodi.binary.instance.audioencoder" version="2.0.0"/></requires>
  <extension
    point="kodi.audioencoder"
    extension=".wav"
    library_android="libaudioencoder.wav.so"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Waveform Audio File Format Encoder</summary>
    <description lang="en">WAV (Waveform Audio Format) is an uncompressed sound format.</description>
    <platform>android-armv7</platform>
  </extension>
</addon>
