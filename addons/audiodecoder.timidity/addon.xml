<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="audiodecoder.timidity"
  version="2.0.3"
  name="Timidity Audio Decoder"
  provider-name="spiff">
  <requires>
<import addon="kodi.binary.global.main" version="1.0.14"/>
<import addon="kodi.binary.global.general" version="1.0.3"/>
<import addon="kodi.binary.global.filesystem" version="1.0.2"/>
<import addon="kodi.binary.instance.audiodecoder" version="2.0.0"/></requires>
  <extension
    point="kodi.audiodecoder"
    name="mid"
    tags="true"
    extension=".mid|.kar"
    library_android="libaudiodecoder.timidity.so"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">MIDI Software synthesizer</summary>
    <description lang="en">TiMidity is a software synthesizer that can play MIDI files without a hardware synthesizer.

To use TiMidity you need a working timidity.cfg config file or sound fonts. Copy this files into the directory you intend to store and select it in the Add-on Settings.
</description>
    <platform>android-armv7</platform>
  </extension>
</addon>
